<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.question.mapper.QuestionMapper">
  <resultMap id="BaseResultMap" type="com.qf.question.entity.Question">
    <!--@mbg.generated-->
    <!--@Table t_question-->
    <id column="question_id" jdbcType="INTEGER" property="questionId" />
    <result column="question_desc" jdbcType="VARCHAR" property="questionDesc" />
    <result column="answer" jdbcType="VARCHAR" property="answer" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    question_id, question_desc, answer, `status`
  </sql>
  <update id="delQuestion">
    UPDATE t_question SET status = 0
    <where>
      question_id IN
      <foreach collection="list" item="id" open="(" separator="," close=")">
        #{id}
      </foreach>
    </where>
  </update>
</mapper>